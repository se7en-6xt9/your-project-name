       #include<stdio.h>
        int main() {
        int sum=0;
        int number,remainder;
        printf("   >>> | ENTER NUMBER | <<<     -->>  " );
        scanf(" %d", &number);
        int dupNum = number; //JUST TO PRINT ENTERD BECUSE IN OPRATION ORIGNAL VERIABLE CHANGE
        while( number>0){
        //BY SE7EN
         remainder = number%10;
         sum = sum+remainder;
         number=number/10;
        }
        printf("   Sum of given number [ %d ] is [ %d ]  \n", dupNum,sum);
        }
